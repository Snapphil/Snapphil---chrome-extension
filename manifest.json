{
  "manifest_version": 3,
  "name": "SnapPhil - AI Job Application Assistant",
  "version": "1.0",
  "description": "Save time on job applications with AI-powered form filling, resume parsing, and cover letter generation to boost your job search.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "contextMenus",
    "downloads"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_title": "SnapPhil",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/html2pdf/html2pdf.bundle.min.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/pdfjs/build/pdf.worker.mjs",
        "lib/pdfjs/build/pdf.mjs",
        "lib/html2pdf/html2pdf.bundle.min.js",
        "icons/*",
        "settings/*",
        "popup/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}